<!DOCTYPE html>
<html>
<head>
  <title>LinkedinAuth</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%- if flash[:notice] %>
  <p class="notice"><%= notice %></p>
<%- end %>
<%- if flash[:alert] %>
  <p class="alert"><%= alert %></p>
<%- end %>

<%= yield %>

</body>
</html>
